    TextInput:
        pos_hint:{'x': .4, 'y': .16}
        size_hint: .5, .05

    Button:
        text: "Cadastrar"
        pos_hint: {"center_x": .5, "center_y":.1}
        size_hint: .90, .1
        color: Color("#FFFAFA")
        background_color: Color("#008000")
        on_press: root.press()

                           
   
    
